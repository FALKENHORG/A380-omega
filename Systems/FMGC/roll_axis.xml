<?xml version="1.0" encoding="UTF-8" ?>

<!-- Airbus A320neo Aileron Control -->

<PropertyList>

	<pid-controller>
		<name>FCU/AP Aileron Control</name>
		<debug type="bool">false</debug>
		<enable>
			<prop>/flight-management/outputs/aileron</prop>
		</enable>
		<input>
			<prop>/orientation/roll-deg</prop>
		</input>
		<reference>
			<prop>/flight-management/outputs/target-bank</prop>
		</reference>
		<output>
			<prop>/controls/flight/aileron</prop> <!-- This is basically the fbw input prop -->
		</output>
		<config>
			<Kp>0.03</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.000001</Td>
			<u_min>-0.25</u_min>
			<u_max>0.25</u_max>
		</config>
	</pid-controller>
	
	<pid-controller>
		<name>FCU/AP Aileron NAV1 Control</name>
		<debug type="bool">false</debug>
		<enable>
			<prop>/flight-management/outputs/aileron-nav1</prop>
		</enable>
		<input>
			<prop>/orientation/roll-deg</prop>
		</input>
		<reference>
			<prop>/flight-management/outputs/target-bank</prop>
		</reference>
		<output>
			<prop>/controls/flight/aileron</prop> <!-- This is basically the fbw input prop -->
		</output>
		<config>
			<Kp>0.06</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.00005</Td>
			<u_min>-0.8</u_min>
			<u_max>0.8</u_max>
		</config>
	</pid-controller>

</PropertyList>
